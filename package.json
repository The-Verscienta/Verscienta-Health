{
  "name": "verscienta-health",
  "version": "1.0.0",
  "private": true,
  "description": "World-class holistic health platform bridging ancient wisdom with modern science",
  "author": "Verscienta Health",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:cms": "turbo run dev --filter=cms",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:cms": "turbo run build --filter=cms",
    "start": "turbo run start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "type-check": "turbo run type-check",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:a11y": "turbo run test:a11y",
    "storybook": "pnpm --filter web storybook",
    "build-storybook": "pnpm --filter web build-storybook",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:setup": "pnpm --filter cms db:setup",
    "db:migrate": "pnpm --filter cms db:migrate",
    "db:seed": "pnpm --filter cms db:seed",
    "db:studio": "pnpm --filter cms db:studio",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@turbo/gen": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "workspaces": ["apps/*", "packages/*"],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": ["biome check --write --no-errors-on-unmatched"]
  }
}
