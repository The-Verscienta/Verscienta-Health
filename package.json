{
  "name": "verscienta-health",
  "version": "1.0.0",
  "private": true,
  "description": "World-class holistic health platform bridging ancient wisdom with modern science",
  "author": "Verscienta Health",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:cms": "turbo run dev --filter=cms",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:cms": "turbo run build --filter=cms",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:a11y": "turbo run test:a11y",
    "storybook": "pnpm --filter web storybook",
    "build-storybook": "pnpm --filter web build-storybook",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:setup": "pnpm --filter cms db:setup",
    "db:migrate": "pnpm --filter cms db:migrate",
    "db:seed": "pnpm --filter cms db:seed",
    "db:studio": "pnpm --filter cms db:studio",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
