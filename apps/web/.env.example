# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Payload CMS API
NEXT_PUBLIC_CMS_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/verscienta_health

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here-generate-a-secure-random-string
BETTER_AUTH_URL=http://localhost:3000

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Algolia Search
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your-algolia-search-api-key
ALGOLIA_ADMIN_KEY=your-algolia-admin-api-key

# Cloudflare Images (Optional - for optimized image delivery)
NEXT_PUBLIC_CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_IMAGES_API_TOKEN=your-cloudflare-images-token
NEXT_PUBLIC_CLOUDFLARE_IMAGES_DELIVERY_URL=https://imagedelivery.net

# Grok AI (xAI)
GROK_API_KEY=your-grok-api-key

# Email (for better-auth email verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@verscientahealth.com

# Cloudflare Turnstile (Bot Protection)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
