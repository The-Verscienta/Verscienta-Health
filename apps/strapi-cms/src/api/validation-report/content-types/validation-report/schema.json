{
  "kind": "collectionType",
  "collectionName": "validation_reports",
  "info": {
    "singularName": "validation-report",
    "pluralName": "validation-reports",
    "displayName": "Validation Report",
    "description": "Data validation reports from automated quality checks"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "string",
      "required": true
    },
    "collectionType": {
      "type": "string"
    },
    "documentId": {
      "type": "string"
    },
    "field": {
      "type": "string"
    },
    "currentValue": {
      "type": "string"
    },
    "suggestedValue": {
      "type": "string"
    },
    "severity": {
      "type": "enumeration",
      "enum": ["error", "warning", "info"],
      "default": "warning"
    },
    "message": {
      "type": "text"
    },
    "issues": {
      "type": "component",
      "repeatable": true,
      "component": "validation.issue"
    },
    "errorCount": {
      "type": "integer",
      "default": 0
    },
    "warningCount": {
      "type": "integer",
      "default": 0
    },
    "totalChecked": {
      "type": "integer"
    },
    "timestamp": {
      "type": "datetime"
    },
    "notes": {
      "type": "text"
    }
  }
}
