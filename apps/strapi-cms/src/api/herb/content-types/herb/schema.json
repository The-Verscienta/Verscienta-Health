{
  "kind": "collectionType",
  "collectionName": "herbs",
  "info": {
    "singularName": "herb",
    "pluralName": "herbs",
    "displayName": "Herb",
    "description": "Comprehensive herb database with TCM and Western herbalism properties"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "photoGallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "botanicalInfo": {
      "type": "component",
      "component": "herb.botanical-info",
      "repeatable": false
    },
    "commonNames": {
      "type": "component",
      "component": "herb.common-name",
      "repeatable": true
    },
    "synonyms": {
      "type": "component",
      "component": "herb.synonym",
      "repeatable": true
    },
    "nativeRegion": {
      "type": "component",
      "component": "herb.native-region",
      "repeatable": true
    },
    "cultivation": {
      "type": "component",
      "component": "herb.cultivation",
      "repeatable": false
    },
    "conservationStatus": {
      "type": "enumeration",
      "enum": [
        "least_concern",
        "near_threatened",
        "vulnerable",
        "endangered",
        "critically_endangered",
        "extinct_wild",
        "not_evaluated",
        "data_deficient"
      ]
    },
    "conservationNotes": {
      "type": "richtext"
    },
    "tcmProperties": {
      "type": "component",
      "component": "herb.tcm-properties",
      "repeatable": false
    },
    "westernProperties": {
      "type": "json"
    },
    "therapeuticUses": {
      "type": "richtext"
    },
    "traditionalAmericanUses": {
      "type": "richtext"
    },
    "nativeAmericanUses": {
      "type": "richtext"
    },
    "activeConstituents": {
      "type": "component",
      "component": "herb.active-constituent",
      "repeatable": true
    },
    "pharmacologicalEffects": {
      "type": "richtext"
    },
    "clinicalStudies": {
      "type": "component",
      "component": "herb.clinical-study",
      "repeatable": true
    },
    "dosageForms": {
      "type": "json"
    },
    "recommendedDosage": {
      "type": "component",
      "component": "herb.dosage",
      "repeatable": true
    },
    "preparationMethods": {
      "type": "component",
      "component": "herb.preparation-method",
      "repeatable": true
    },
    "safetyInfo": {
      "type": "component",
      "component": "herb.safety-info",
      "repeatable": false
    },
    "drugInteractions": {
      "type": "component",
      "component": "herb.drug-interaction",
      "repeatable": true
    },
    "images": {
      "type": "component",
      "component": "herb.herb-image",
      "repeatable": true
    },
    "videos": {
      "type": "component",
      "component": "herb.video",
      "repeatable": true
    },
    "relatedHerbs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::herb.herb"
    },
    "substituteHerbs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::herb.herb"
    },
    "conditionsTreated": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::condition.condition"
    },
    "averageRating": {
      "type": "decimal"
    },
    "reviewCount": {
      "type": "integer"
    },
    "herbId": {
      "type": "string",
      "unique": true
    },
    "peerReviewStatus": {
      "type": "enumeration",
      "required": true,
      "default": "draft",
      "enum": [
        "draft",
        "in_review",
        "peer_reviewed",
        "expert_verified",
        "published",
        "needs_update"
      ]
    },
    "searchTags": {
      "type": "component",
      "component": "herb.search-tag",
      "repeatable": true
    }
  }
}
