{
  "kind": "collectionType",
  "collectionName": "conditions",
  "info": {
    "singularName": "condition",
    "pluralName": "conditions",
    "displayName": "Condition",
    "description": "Health conditions and ailments"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "symptoms": {
      "type": "component",
      "component": "condition.symptom-item",
      "repeatable": true
    },
    "severity": {
      "type": "enumeration",
      "enum": ["mild", "moderate", "severe", "life_threatening"]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "digestive",
        "respiratory",
        "cardiovascular",
        "musculoskeletal",
        "nervous",
        "immune",
        "endocrine",
        "skin",
        "mental",
        "other"
      ]
    },
    "tcmPattern": {
      "type": "string"
    },
    "westernDiagnosis": {
      "type": "string"
    },
    "prevalence": {
      "type": "text"
    },
    "conventionalTreatments": {
      "type": "richtext"
    },
    "complementaryApproaches": {
      "type": "richtext"
    },
    "relatedHerbs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::herb.herb"
    },
    "relatedFormulas": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::formula.formula"
    },
    "relatedSymptoms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::symptom.symptom"
    },
    "preventionTips": {
      "type": "richtext"
    },
    "lifestyleRecommendations": {
      "type": "richtext"
    },
    "dietaryAdvice": {
      "type": "richtext"
    },
    "whenToSeekHelp": {
      "type": "richtext"
    }
  }
}
