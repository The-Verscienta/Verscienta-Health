{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review",
    "description": "User reviews for herbs, formulas, practitioners, and modalities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "rating": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "title": {
      "type": "string"
    },
    "comment": {
      "type": "richtext",
      "required": true
    },
    "reviewedEntityType": {
      "type": "enumeration",
      "enum": ["herb", "formula", "practitioner", "modality"],
      "required": true
    },
    "reviewedEntityId": {
      "type": "string",
      "required": true
    },
    "helpful": {
      "type": "integer",
      "default": 0
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "authorName": {
      "type": "string"
    },
    "moderationStatus": {
      "type": "enumeration",
      "enum": ["pending", "approved", "rejected", "flagged"],
      "default": "pending",
      "required": true
    },
    "moderatorNotes": {
      "type": "text"
    }
  }
}
