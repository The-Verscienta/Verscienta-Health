{
  "kind": "collectionType",
  "collectionName": "practitioners",
  "info": {
    "singularName": "practitioner",
    "pluralName": "practitioners",
    "displayName": "Practitioner",
    "description": "Healthcare practitioners and healers"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "phone": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "profileImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "bio": {
      "type": "richtext"
    },
    "credentials": {
      "type": "component",
      "repeatable": true,
      "component": "practitioner.credential"
    },
    "yearsExperience": {
      "type": "integer"
    },
    "practiceType": {
      "type": "enumeration",
      "enum": ["solo", "group", "clinic", "hospital", "online"]
    },
    "modalities": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::modality.modality",
      "required": true
    },
    "specialties": {
      "type": "component",
      "repeatable": true,
      "component": "practitioner.specialty"
    },
    "languagesSpoken": {
      "type": "component",
      "repeatable": true,
      "component": "practitioner.language"
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "practitioner.address"
    },
    "serviceArea": {
      "type": "string"
    },
    "acceptsInsurance": {
      "type": "boolean",
      "default": false
    },
    "insuranceProviders": {
      "type": "component",
      "repeatable": true,
      "component": "practitioner.insurance-provider"
    },
    "offersVirtualConsults": {
      "type": "boolean",
      "default": false
    },
    "bookingUrl": {
      "type": "string"
    },
    "pricing": {
      "type": "component",
      "repeatable": false,
      "component": "practitioner.pricing"
    },
    "availability": {
      "type": "richtext"
    },
    "treatmentApproach": {
      "type": "richtext"
    },
    "verificationStatus": {
      "type": "enumeration",
      "enum": ["pending", "verified", "suspended"],
      "default": "pending",
      "required": true
    },
    "verifiedDate": {
      "type": "datetime"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "averageRating": {
      "type": "decimal"
    },
    "reviewCount": {
      "type": "integer"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
