{
  "kind": "collectionType",
  "collectionName": "formulas",
  "info": {
    "singularName": "formula",
    "pluralName": "formulas",
    "displayName": "Formula",
    "description": "Traditional and modern herbal formulas"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "required": true,
      "component": "formula.ingredient"
    },
    "totalWeight": {
      "type": "decimal"
    },
    "totalWeightUnit": {
      "type": "enumeration",
      "enum": ["g", "mg", "oz", "ml"]
    },
    "preparationInstructions": {
      "type": "richtext"
    },
    "dosage": {
      "type": "richtext"
    },
    "useCases": {
      "type": "component",
      "repeatable": true,
      "component": "formula.use-case"
    },
    "relatedConditions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::condition.condition"
    },
    "tradition": {
      "type": "enumeration",
      "enum": ["tcm", "ayurveda", "western", "native_american", "modern", "other"]
    },
    "category": {
      "type": "string"
    },
    "historicalText": {
      "type": "string"
    },
    "modernAdaptations": {
      "type": "richtext"
    },
    "contraindications": {
      "type": "richtext"
    },
    "sideEffects": {
      "type": "richtext"
    }
  }
}
