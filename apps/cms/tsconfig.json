{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node"],
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@/collections/*": ["./src/collections/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/access/*": ["./src/access/*"],
      "@/fields/*": ["./src/fields/*"],
      "@payload-config": ["./payload.config.ts"]
    }
  },
  "include": ["src/**/*", "payload.config.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist", ".next"]
}
