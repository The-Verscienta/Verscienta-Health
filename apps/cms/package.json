{
  "name": "cms",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next dev -p 3001",
    "build": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next build",
    "db:init": "tsx src/scripts/init-db.ts",
    "start": "pnpm db:init && cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" PORT=${PORT:-3001} next start",
    "generate:types": "payload generate:types",
    "generate:schema": "payload generate:graphQLSchema",
    "db:setup": "tsx src/scripts/setup-db.ts",
    "db:migrate": "payload migrate",
    "db:migrate:create": "payload migrate:create",
    "db:migrate:status": "payload migrate:status",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:backup": "pg_dump -U verscienta_user verscienta_health > backup_$(date +%Y%m%d_%H%M%S).sql",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.906.0",
    "@node-rs/crc32": "^1.10.6",
    "@payloadcms/db-postgres": "^3.59.1",
    "@payloadcms/next": "^3.59.1",
    "@payloadcms/plugin-seo": "^3.59.1",
    "@payloadcms/richtext-lexical": "^3.59.1",
    "@payloadcms/storage-s3": "^3.59.1",
    "algoliasearch": "^5.18.0",
    "axios": "^1.7.9",
    "cron-parser": "^5.4.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "ioredis": "^5.8.0",
    "next": "15.5.4",
    "node-cron": "^4.2.1",
    "payload": "^3.59.1",
    "postgres": "^3.4.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "resend": "^6.1.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.29.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
